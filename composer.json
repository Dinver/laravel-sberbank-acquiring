{
    "name": "avlyalin/sberbank-acquiring",
    "description": "Provides functionality to interoperate with Sberbank acquiring system",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "sberbank",
        "acquiring",
        "laravel",
        "client",
        "rest",
        "api"
    ],
    "authors": [
        {
            "name": "Aleksey Lyalin",
            "email": "lyalin.alexey@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1",
        "guzzlehttp/guzzle": "^6.5"
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^2.8",
        "phpunit/phpunit": "^9.2",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "minimum-stability": "stable",
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "SberbankAcquiring\\": "src",
            "SberbankAcquiring\\Tests\\": "tests"
        }
    },
    "scripts": {
        "add-hooks": [
            "./vendor/bin/cghooks add"
        ],
        "code-sniffer": [
            "./vendor/bin/phpcs --config-set default_standard phpcs.xml",
            "./vendor/bin/phpcs --config-set colors 1"
        ],
        "post-install-cmd": [
            "@code-sniffer",
            "@add-hooks"
        ],
        "post-update-cmd": [
            "@code-sniffer"
        ]
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "make composer-validate",
                "make phpcs"
            ],
            "pre-push": [
                "make phpunit"
            ]
        }
    }
}
